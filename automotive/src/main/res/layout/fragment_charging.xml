<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChargingFragment"
    android:padding="20dp">
    <com.ekndev.gaugelibrary.ArcGauge
        android:id="@+id/batteryTemp"
        android:layout_width="@dimen/gauge_minor_diameter"
        android:minWidth="100dp"
        android:layout_height="@dimen/gauge_minor_diameter"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp" />

    <com.ekndev.gaugelibrary.ArcGauge
        android:id="@+id/chargeGauge"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="match_parent"

        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:minWidth="200dp" />

    <com.ekndev.gaugelibrary.ArcGauge
        android:id="@+id/batteryVoltage"
        android:layout_width="@dimen/gauge_minor_diameter"
        android:layout_height="@dimen/gauge_minor_diameter"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:minWidth="100dp" />
</RelativeLayout>